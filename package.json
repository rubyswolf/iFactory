{
  "name": "ifactory",
  "productName": "iFactory",
  "version": "0.1.2",
  "description": "Build plugins with the iPlug2 framework, Codex and GitHub all in one integrated environment",
  "author": "Dart Spark",
  "license": "UNLICENSED",
  "main": "main.js",
  "build": {
    "appId": "com.dartspark.ifactory",
    "productName": "iFactory",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/dist/**",
      "!**/.git/**",
      "!**/node_modules/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "icons/logo.ico"
    }
  },
  "scripts": {
    "start": "electron ."
  },
  "bin": {
    "ifact": "ifact.js"
  },
  "devDependencies": {
    "electron": "^29.1.0",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "sql.js": "^1.13.0"
  }
}
